<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name=".SuitCaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuitCase"
        tools:targetApi="31">
        <activity
            android:name=".ui.views.activity.auth.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.SuitCase" />
        <activity
            android:name=".ui.views.activity.profile.ProfileEditActivity"
            android:exported="false" />
        <activity
            android:name=".ui.views.activity.profile.ProfileViewActivity"
            android:exported="false" />
        <activity
            android:name=".ui.views.activity.item.ItemDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.views.activity.item.AddNewItemUnderTripActivity"
            android:exported="false" />
        <activity
            android:name=".ui.views.activity.item.ItemEditActivity"
            android:exported="false" />
        <activity
            android:name=".ui.views.activity.item.ItemListActivity"
            android:exported="false" />
        <activity
            android:name=".ui.views.activity.item.AddItemActivity"
            android:exported="false" />
        <activity
            android:name=".ui.views.activity.trip.AddTripActivity"
            android:exported="false" />
        <activity
            android:name=".ui.views.activity.auth.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.views.activity.auth.LoginActivity"
            android:exported="false"></activity>
        <activity
            android:name=".ui.views.activity.auth.RegisterActivity"
            android:exported="false"></activity>
        <activity
            android:name=".ui.views.activity.MainActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
    </application>

</manifest>