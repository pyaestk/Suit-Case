<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Alert box-->
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text.CenterStacked">
        <item name="android:textColor">#1E88E5</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">5dp</item>

    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog.Flush">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">20dp</item>
    </style>

    <!--Search View Theme-->
    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@color/grayText</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="tint">@color/grayText</item>
        <item name="cursorColor">@color/grayText</item>
        <item name="android:textColorSecondary">@color/grayText</item>
    </style>

    <!-- Custom DatePicker Theme -->
    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">#1E88E5</item>
        <item name="colorOnSurfaceVariant">#1E88E5</item>
        <item name="colorSurfaceContainerHigh">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.MediumComponent</item>
    </style>

    <style name="Logo.Theme.SuitCase" parent="Theme.Material3.Light.NoActionBar">
        <item name="fontFamily">@font/poppins_bold_italic</item>
    </style>

    <style name="Menu.Label.Theme.SuitCase" parent="Theme.Material3.Light.NoActionBar">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimary">#1E88E5</item>
        <item name="colorOutline">@color/white</item>
        <item name="colorSurfaceContainerHighest">@color/bluewhite</item>
        <item name="colorSurfaceVariant">@color/bluewhite</item>
    </style>

    <!-- Define your custom PopupMenu style -->
    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="tint">#1E88E5</item>
    </style>

</resources>